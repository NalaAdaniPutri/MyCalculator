<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#FFB6C1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalculatorButton.Operator">
        <item name="android:background">#FF69B4</item>
    </style>

    <style name="CalculatorButton.Equal">
        <item name="android:background">#FF1493</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalculatorButton.Clear">
        <item name="android:background">#FF69B4</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
</resources>